<h1>New answer</h1>

<% form_for(@answer) do |f| %>
  <%= f.error_messages %>

  <p>
		<%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
		<%= f.label :question_id %><br />
    <%= f.text_field :question_id %>
  </p>
  <p>
		<%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', answers_path %>