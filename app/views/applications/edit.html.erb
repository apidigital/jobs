<h1>Editing application</h1>

<% form_for(@application) do |f| %>
  <%= f.error_messages %>

  <p>
		<%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
		<%= f.label :position_id %><br />
    <%= f.text_field :position_id %>
  </p>
  <p>
		<%= f.label :checked_on %><br />
    <%= f.text_field :checked_on %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

